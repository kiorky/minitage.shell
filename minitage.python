#!/bin/bash
cwd="$(dirname $0)"
if [[ -f "$cwd/../buildout.cfg" ]];then
        minitage_dir="$cwd/../../.."
elif [[ -f "$cwd/../minimerge" ]];then
        minitage_dir="$cwd/../"
else 
        minitage_dir="$cwd/../minitage"
fi
python="$minitage_dir/dependencies/python-2.4/part/bin/python"
#minitage v3
for i in "$minitage_dir"/eggs/*/site-packages-2.4;do
	PYTHONPATH="$PYTHONPATH:$i"
done

export PYTHONPATH="$PYTHONPATH" 
"$python" "$@"
